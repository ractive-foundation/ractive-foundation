<div class="ux-flex-video">
	{{#if .isDataModel}}
	<div class="flex-video {{class}}">
		<iframe 
			src="{{src}}"
			height="{{height}}"
			width="{{width}}"
			frameborder="{{frameborder}}"
			name="{{name}}"
			{{#allowfullscreen}} {{allowfullscreen}}{{/}}>
		</iframe>
	</div>
	{{else}}
		{{yield}}
	{{/if}}
</div>
