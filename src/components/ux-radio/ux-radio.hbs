
    <label>{{.label}}</label>
    {{#each items}}
        <input {{#if .type}}type="{{.type}}"{{/if}}
            {{#if .name}}name="{{.name}}"{{/if}}
            {{#if .id}}id="{{.id}}"{{/if}}
            {{#if .value}}value="{{.value}}"{{/if}}
               on-blur="handleBlur"
               on-tap="handleTap">
        <label for="{{.id}}">{{.value}}</label>
    {{/each}}

