<div class="ux-orbit">
	<div class="orbit-container {{currentPageCssClass}}">
		<ul class="pageContainer example-orbit orbit-slides-container">
			{{#if isDataModel}}
				{{#items}}
					<li class="orbit-slides-slide {{#active}} active{{/}}" on-swipeleft="nextPage" on-swiperight="prevPage">
						<img src="{{imagesrc}}" alt="{{imagealt}}" />
						<div class="orbit-caption">{{caption}}</div>
					</li>
				{{/}}
			{{else}}
				{{>content}}
			{{/if}}
			{{#unless items}}
				<li class="orbit-slides-slide">
					<h2>No slides found</h2>
				</li>
			{{/unless}}
		</ul>

		{{#if navigation_arrows}}
			{{#if currentPage !== 1}}
				<a href="#" class="orbit-prev" on-tap="prevPage">Prev <span></span></a>
			{{/if}}
			{{#if currentPage !== slidesTotal}}
				<a href="#" class="orbit-next" on-tap="nextPage">Next <span></span></a>
			{{/if}}
		{{/if}}

		{{#if slide_number}}
			<div class="orbit-slide-number">
				<span>{{currentPage}}</span> of <span>{{slidesTotal}}</span>
			</div>
		{{/if}}
	</div>

	{{#if bullets}}
		<ol class="orbit-bullets">
			{{#items:i}}
				<li data-orbit-slide-number="{{i}}" class="{{#active}}active{{/}}">
			{{/}}
		</ol>
	{{/if}}
</div>